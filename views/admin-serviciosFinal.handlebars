<div class="container-top">
  <table>
    <tr>
      <th class="text-inicio">
        <img src="/images/services-green.png">
      </th>
      <th>
        <h1>Servicio - Existentes</h1>
      </th>
    </tr>
    </table>


    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Servicio</th>
          <th scope="col">Costo</th>
          <th scope="col"></th>
        </tr>
      </thead>

      {{#each servicios}}

      <tr class="col fila-{{id}}">
        <td>{{id}}</td>
        <td contenteditable="true" class="servicio">{{servicio}}</td>
        <td contenteditable="true" class="costo">{{costo}}</td>
        <td>
          <button type="submit" class="editar btn btn-success" data-fila={{id}}>Editar</button>
        </td>
        <td>
          <button type="submit" class="delete btn btn-danger" data-fila={{id}}>X</button>
        </td>
      </tr>

      {{/each}}
    </table>
  </div>

  <div><br></div>
 <table>
    <tr>
      <th class="text-inicio">
        <img src="/images/services-green.png">
      </th>
      <th>
        <h1>Servicio - Crear</h1>
      </th>
    </tr>
    </table>

    <form>
      <div class="row">
        <div class="col">
          <input type="text" class="form-control" id='servicio' placeholder="Servicio">
        </div>
        <div class="col">
          <input type="text" class="form-control" id='costo' placeholder="Costo">
        </div>
        <div class="col">
          <button type="submit" class="btn btn-success" id='submit'>Agregar</button>
        </div>
      </div>
    </form>
  </div>

  <div id="btn-editar">
   <a href="/admin/servicios/addDel"><img src="/images/btn-editar.png"></a>
  </div>

</div>>

